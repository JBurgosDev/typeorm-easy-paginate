{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "es5"],
    "declaration": true,
    "outDir": "./lib",
     "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "types": ["node"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "lib",
    "node_modules",
    "src/**/*.spec.ts",
    "./index.ts",
    "./index.d.ts"
  ],
  "include": [
    "src"
  ]
}
